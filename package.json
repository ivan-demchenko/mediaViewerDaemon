{
  "name": "media_view_daemon",
  "version": "0.0.4",
  "preferGlobal": "true",
  "description": "Daemon that processes images for mediaView",
  "main": "lib/app.js",
  "author": "Ivan Demchenko (raqy.style@gmail.com)",
  "license": "MIT",
  "scripts": {
    "setup": "npm i && typings install",
    "build": "tsc ./src/*.ts -m commonjs -outDir ./lib",
    "runOnce": "rm -r ./logs/* && node ./lib/app.js",
    "test": "./node_modules/.bin/mocha"
  },
  "directories": {
    "bin": "./bin",
    "lib": "./lib"
  },
  "bin": {
    "media-view-daemon": "./bin/media-view-daemon"
  },
  "dependencies": {
    "baconjs": "^0.7.88",
    "daemon": "^1.1.0",
    "fluture": "^4.0.3",
    "fs-readdir": "0.0.3",
    "ramda": "^0.22.1",
    "readdir-recursive": "0.0.4",
    "recursive-readdir": "^2.1.0",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "mocha": "^3.1.2",
    "mockery": "^2.0.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.6",
    "typescript": "^2.0.8",
    "typings": "^2.0.0"
  }
}
